{
  "name": "angular-media-query",
  "version": "1.0.0",
  "description": "Conditionally render dom elements based on media queries in Angular2+",
  "main": "index.js",
  "scripts": {
    "lint": "tslint lib/**/*.ts test/**/*.ts",
    "clean:build": "rimraf build",
    "clean": "rimraf dist build",
    "copy:metadata": "ts-node tools/utils/cp-metadata.ts",
    "transpile:es6": "ngc -p tsconfig-build.json",
    "transpile:es5": "ngc -p tsconfig-build.es5.json",
    "rollup:es6": "rollup -c tools/config/rollup/rollup.es6.config.js",
    "rollup:es5": "rollup -c tools/config/rollup/rollup.es5.config.js",
    "rollup:umd": "rollup -c tools/config/rollup/rollup.umd.config.js",
    "minify:umd": "uglifyjs dist/bundles/angular-media-query.umd.js -c -m -o dist/bundles/angular-media-query.umd.min.js",
    "build:es6": "npm run clean:build && npm run transpile:es6 && npm run rollup:es6 && npm run copy:metadata",
    "build:es5": "npm run clean:build && npm run transpile:es5 && npm run rollup:es5",
    "build:umd": "npm run rollup:umd && npm run minify:umd",
    "prebuild": "npm run clean && npm run lint",
    "build": "npm run build:es6 && npm run build:es5 && npm run build:umd",
    "postbuild": "ts-node tools/utils/post-build.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeterLaraia/angular-media-query.git"
  },
  "author": "Peter Laraia",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PeterLaraia/angular-media-query/issues"
  },
  "homepage": "https://github.com/PeterLaraia/angular-media-query#readme",
  "devDependencies": {
    "@angular/common": "^4.2.6",
    "@angular/core": "^4.2.6",
    "@types/jasmine": "^2.5.53",
    "codelyzer": "^3.1.2",
    "core-js": "^2.4.1",
    "fs": "0.0.1-security",
    "fs-extra": "^3.0.1",
    "husky": "^0.14.3",
    "jasmine": "^2.6.0",
    "karma": "^1.7.0",
    "recursive-copy": "^2.0.6",
    "rimraf": "^2.6.1",
    "rollup": "^0.43.0",
    "rxjs": "^5.4.2",
    "ts-node": "^3.2.0",
    "tslib": "^1.7.1",
    "tslint": "^5.5.0",
    "typescript": "^2.4.1",
    "uglify-js": "^3.0.24",
    "zone.js": "^0.8.12"
  }
}
